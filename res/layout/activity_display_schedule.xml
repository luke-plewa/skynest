                android:textSize="14sp" />

            <TextView
                android:id="@+id/sunday_departure_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sunday_arrival_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="2"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
